<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.com490.expiredteam.expired.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXPIRED"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="32sp"
        android:textColor="@android:color/black"/>

    <info.hoang8f.widget.FButton
        fbutton:fButtonColor="@color/manual_input_bg"
        android:text="Manual Input"
        fbutton:shadowEnabled="false"
        fbutton:cornerRadius="8dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>

    <LinearLayout
        android:id="@+id/recent_items_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="21dp"
        android:paddingBottom="21dp"
        android:background="@color/recent_items_bg">

        <TextView
            android:id="@+id/all_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/all_item"
            android:textSize="24sp"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recent_items"
        android:textSize="32sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/recent_items_container"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/ScanButton"
        android:layout_width="137dp"
        android:layout_height="61dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="259dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/scan_item" />


</RelativeLayout>
